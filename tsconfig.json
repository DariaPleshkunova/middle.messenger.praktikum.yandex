{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "esModuleInterop": true
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
